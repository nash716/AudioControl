.tabs
	overflow auto

	.no-audible-tabs
		width 100%
		height 100%
		line-height 350px
		color #555
		text-align center

	.tab
		width 100%
		height 30px
		line-height 30px
		text-overflow ellipsis
		overflow hidden
		cursor pointer

		.tooltip
			float right
			display none
			height 20px
			line-height 20px
			margin 5px 8px 5px 4px
			padding 0 4px
			background-color rgba(255, 255, 255, 0.3)
			font-weight bold

		&:hover,
		&.hover
			background-color #007AB7
			color white

			.tooltip
				display block

		&.active
			font-weight bold

		span
			margin-left 3px
			margin-right 2px

			&:first-child
				margin-left 8px
